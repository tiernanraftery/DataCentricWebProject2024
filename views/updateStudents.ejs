<head>
    <a href="/">home</a>
    <h1>Update Student</h1>
</head>
<body>
    <!--display errors to screen-->
    <% if (errors && errors.length > 0) { %>
        <ul>
          <% errors.forEach(function(message) { %>
            <li><%= message %></li>
          <% }); %>
        </ul>
      <% } %>
    
    <!--form to update student-->
    <form action="/students/edit/<%= student.sid %>" method="POST">
        <label for="sid">Student ID (not editable):</label>
        <input type="text" id="sid" name="sid" value="<%= student.sid %>" readonly><br><br>
    
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= student.name %>"><br><br>
    
        <label for="age">Age:</label>
        <input type="number" id="age" name="age" value="<%= student.age %>"><br><br>
    
        <button type="submit">Update</button>
      </form>
</body>